# Database
# For PostgreSQL (current Prisma schema)
DATABASE_URL="postgresql://username:password@localhost:5432/صيدلية_store"

# Direct database connection (for connection pooling)
DIRECT_DATABASE_URL="postgresql://username:password@localhost:5432/صيدلية_store"

# Database connection pool settings
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_ACQUIRE_TIMEOUT=30000

# For MongoDB (alternative)
# MONGODB_URI="mongodb://localhost:27017/صيدلية_store"

# Authentication
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# File Upload
UPLOADTHING_SECRET="your_uploadthing_secret_here"
UPLOADTHING_APP_ID="your_uploadthing_app_id_here"

# Email
RESEND_API_KEY="your_resend_api_key_here"

# Environment
NODE_ENV="development"
